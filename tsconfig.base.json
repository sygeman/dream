{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dream/app-panel": ["libs/app-panel/src/index.ts"],
      "@dream/auth": ["libs/auth/src/index.ts"],
      "@dream/auth-api": ["libs/auth-api/src/index.ts"],
      "@dream/chat": ["libs/chat/src/index.ts"],
      "@dream/community": ["libs/community/src/index.ts"],
      "@dream/community-api": ["libs/community-api/src/index.ts"],
      "@dream/components/*": ["libs/components/src/lib/*"],
      "@dream/components/modal": ["libs/components/modal/src/index.ts"],
      "@dream/components/modal-full": [
        "libs/components/modal-full/src/index.ts"
      ],
      "@dream/components/save-form": ["libs/components/save-form/src/index.ts"],
      "@dream/connection-api": ["libs/connection-api/src/index.ts"],
      "@dream/containers/*": ["libs/containers/src/*"],
      "@dream/external-api/spotify": ["libs/external-api/spotify/src/index.ts"],
      "@dream/external-api/tenor": ["libs/external-api/tenor/src/index.ts"],
      "@dream/external-api/youtube": ["libs/external-api/youtube/src/index.ts"],
      "@dream/layouts/*": ["libs/layouts/src/*"],
      "@dream/mode/host-spotify/ui": ["libs/mode/host-spotify/ui/src/index.ts"],
      "@dream/mode/spotify/api": ["libs/mode/spotify/api/src/index.ts"],
      "@dream/mode/spotify/ui": ["libs/mode/spotify/ui/src/index.ts"],
      "@dream/mode/twitch/api": ["libs/mode/twitch/api/src/index.ts"],
      "@dream/mode/twitch/ui": ["libs/mode/twitch/ui/src/index.ts"],
      "@dream/mode/youtube/api": ["libs/mode/youtube/api/src/index.ts"],
      "@dream/mode/youtube/ui": ["libs/mode/youtube/ui/src/index.ts"],
      "@dream/pepega-ui/*": ["libs/pepega-ui/src/lib/*"],
      "@dream/prisma": ["libs/prisma/src/index.ts"],
      "@dream/spotify-now": ["libs/spotify-now/src/index.ts"],
      "@dream/storybook": ["libs/storybook/src/index.ts"],
      "@dream/types": ["libs/types/src/index.tsx"],
      "@dream/ui/*": ["libs/ui/src/lib/*"],
      "@dream/user": ["libs/user/src/index.ts"],
      "@dream/user-api": ["libs/user-api/src/index.ts"],
      "@dream/utils/*": ["libs/utils/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
